<!DOCTYPE html>
<html>
  <head>
    <title>Users</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if !current_page?(user_session_path) && !current_page?(new_user_registration_path) && !user_signed_in? %>
      <%= render 'welcome/navbar' %>
      <%= render 'welcome/content' %>
    <% elsif !current_page?(user_session_path) && !current_page?(new_user_registration_path) %>
      <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
    <% end %>
      <%= yield %>
  </body>
</html>
